//ABC.cpp - displays the total sales
// Created / revised by Jonathan David Livesay on 11/17/2012

#include <iostream>
using namespace std;

// function prototypes
void displayLine();
void displayCompanyInfo();
void displayTotalSales(int total);

int main()
{
	int store1Sales = 0;
	int store2Sales = 0;
	int totalSales = 0;

	// enter input items
	cout << "Store 1's sales: ";
	cin >> store1Sales;
	cout << "Store 2's sales: ";
	cin >> store2Sales;

	// calculate total sales
	totalSales = store1Sales + store2Sales;

	// display output items
	displayLine();
	displayCompanyInfo();
	displayTotalSales(totalSales);
	displayLine();

	// System("PAUSE");
	return 0;
} // end of main

// *****function definitions*****
void displayLine()
{
	cout << "--------------------" << endl;
} // end of displayLine function

void displayCompanyInfo()
{
	cout << "ABC Company" << endl;
	cout << "Chicago, Illinois" << endl << endl;
} // end of displayCompanyInfo function

void displayTotalSales(int total)
{
	cout << "Total sales $ " << total << endl;
} // end of displayTotalSales



